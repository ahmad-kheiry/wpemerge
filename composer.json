{
  "name": "htmlburger/wpemerge",
  "description": "A micro framework which modernizes WordPress as a CMS development by providing tools to implement MVC and more.",
  "type": "library",
  "keywords": ["wordpress", "framework", "controller", "template", "view", "request", "response", "middleware", "wpemerge"],
  "license": "GPL-2.0-only",
  "homepage": "https://wpemerge.com/",
  "authors": [
    {
      "name": "Atanas Angelov",
      "email": "atanas.angelov.dev@gmail.com",
      "homepage": "https://github.com/atanas-angelov-dev/",
      "role": "Developer"
    },
    {
      "name": "htmlBurger",
      "email": "info@htmlburger.com",
      "homepage": "http://htmlburger.com/",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/htmlburger/wpemerge",
    "issues": "https://github.com/htmlburger/wpemerge/issues",
    "email": "wordpress@htmlburger.com"
  },
  "require": {
    "php": ">=5.5",
    "pimple/pimple": "^3.2",
    "guzzlehttp/psr7": "^1.5"
  },
  "require-dev": {
    "mockery/mockery": "^0.9",
    "filp/whoops": "^2.2",
    "squizlabs/php_codesniffer": "^3.3",
    "phpcompatibility/php-compatibility": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "WPEmerge\\": "src/",
      "WPEmergeTestTools\\": "tests/tools"
    },
    "files": [
      "config.php"
    ]
  },
  "scripts": {
    "lint": "phpcs",
    "test:unit": "phpunit --configuration=./tests/phpunit.xml --coverage-clover=./tmp/clover.xml",
    "test:acceptance": "wpacceptance run",
    "test:acceptance:install": "composer config minimum-stability dev && composer config prefer-stable true && composer require --dev 10up/wpacceptance:0.16.*"
  }
}
